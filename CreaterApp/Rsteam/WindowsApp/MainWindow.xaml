<Window x:Class="Rsteam.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Rsteam"
        mc:Ignorable="d"
        Title="Rsteam Creater" Height="450" Width="800" WindowStyle="None" MouseLeftButtonDown="DownDravWindows">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="10*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Frame x:Name="MainNaviFrame" Grid.Column="1" Grid.Row="1" NavigationUIVisibility="Hidden"/>
        <Menu Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Column="2">
            <MenuItem Header="X">
                <MenuItem Header="Exit" Click="ClEventExit"/>
                <MenuItem Header="InViz" Click="ClEventInVize"/>
                <CheckBox Content="FontSizeMax" Checked="CheckBox_Checked" Unchecked="CheckBox_Unchecked"/>
                <MenuItem Header="LogOut" Click="ClEventLogOut"/>
            </MenuItem>
        </Menu>
    </Grid>
</Window>
