<Page x:Class="Rsteam.PagesApp.PageEditAkk"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Rsteam.PagesApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageEditAkk">

    <Grid>
        <StackPanel>
            <Image Source="{Binding Photo}" ToolTip="If You want edit phot pls click Right btn" Width="150" Height="150" MouseRightButtonDown="MouseDownEditPhoto"/>
            <TextBox ToolTip="Name" Text="{Binding FullName}"/>
            <TextBox ToolTip="NickName" Text="{Binding XName}"/>
            <TextBox ToolTip="Login" x:Name="TxtLogin" Text="{Binding Login}"/>
            <TextBox ToolTip="Password" Text="{Binding Password}"/>
            <Button Content="Save Edit" Click="ClEventSave"/>
        </StackPanel>
    </Grid>
</Page>
