<Page x:Class="Rsteam.PagesApp.PageEditGame"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Rsteam.PagesApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageEditGame">

    <Grid>
        <StackPanel>
            <TextBox Text="{Binding Title}"/>
            <TextBox Text="{Binding Price}"/>
            <ScrollViewer Height="150">
                <TextBox Text="{Binding Diskription}" TextWrapping="Wrap" />
                </ScrollViewer>
                <Image Source="{Binding Photo}" Width="150" Height="150" x:Name="ImaGeGame"/>
            <Button Content="Edit photo" Click="ClEventditPhoto"/>
            <Button Content="Save Edits" Click="ClEventSaveChang"/>
        </StackPanel> 
    </Grid>
</Page>
