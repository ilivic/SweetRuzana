<Page x:Class="Rsteam.PagesApp.PageMenuMain"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Rsteam.PagesApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageMenuMain">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="10*"/>
        </Grid.RowDefinitions>
        <Grid >
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Content="Загрузить игру" Click="ClEventAddGame"/>
            <Button Grid.Column="1" Content="Изменить игру" Click="ClEventChangGame"/>
            <Button Grid.Column="2" Content="Мои игры" Click="ClEventBlockGameShow"/>
            <Button  Grid.Column="3" Content="Изменить аккаунт" Click="ClEventEditAkk"/>
            <Button Grid.Column="4" Content="Удалить игру" Click="ClEventDellGame"/>
        </Grid>
        <Frame Grid.Row="1" Name="MainNavigationFrame" NavigationUIVisibility="Hidden"/>
    </Grid>
</Page>
