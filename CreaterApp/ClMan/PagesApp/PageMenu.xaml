<Page x:Class="ClMan.PagesApp.PageMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ClMan.PagesApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageMenu">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="10*"/>
        </Grid.RowDefinitions>
        <ToolBar>
            <Button Content="Все игры" Click="Button_Click"/>
            <Button Content="Библиотека" Click="Button_Click_1"/>
            <Button Content="Список друзей" Click="Button_Click_4"/>
            <Button Content="Профиль" Click="Button_Click_3"/>
            <Button Content="Поддержка" Click="Button_Click_2"/>

        </ToolBar>
        <Frame Grid.Row="1" Name="MainFrame" NavigationUIVisibility="Hidden"/>
    </Grid>
</Page>
