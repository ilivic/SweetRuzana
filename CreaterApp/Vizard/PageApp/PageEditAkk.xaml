<Page x:Class="Vizard.PageApp.PageEditAkk"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Vizard.PageApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageEditAkk">

    <Grid>
        <StackPanel>
            <Button Content="Edit Photo" Click="CLEventAddPhoto"/>
            <Border BorderBrush="Black" BorderThickness="1">
                <Image x:Name="ImageProfil" Width="250" Height="250" Source="{Binding Photo}" />
            </Border>
            <TextBox Text="{Binding FullName}" ToolTip="you  FullName"/>
            <TextBox Text="{Binding Login}" x:Name="TxtLogin" ToolTip="You Login"/>
            <Button Content="Save" Click="ClEventSave"/>
        </StackPanel>
    </Grid>
</Page>
